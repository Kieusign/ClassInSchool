<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:paddingLeft="50dp"
            android:paddingVertical="40dp"
            android:background="@drawable/rec"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="and you can discover best new around \n the world"
            android:textColor="#ffff"
            android:textSize="15dp"
            android:paddingLeft="50dp"
            android:paddingVertical="70dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#d3d3d3"
            android:layout_alignParentStart="true" android:layout_marginStart="34dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="243dp"/>

    <EditText
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:hint="Password (Optional)"
            android:textColor="#d3d3d3"
            android:layout_alignParentStart="true" android:layout_marginStart="36dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="182dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chk_rem"
            android:layout_alignParentStart="true" android:layout_marginStart="36dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="137dp"/>
    <Button
            android:layout_width="349dp"
            android:layout_height="62dp"
            android:text="LOGIN"
            android:background="@drawable/rec_pink_ps6"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" android:layout_alignParentTop="true" android:layout_marginTop="439dp"/>
</RelativeLayout>
